.p-not_found
  .p-nf-illustration
    margin: 0 auto

    width: 300px
    height: 170px

    background: url(urlify('/images/not_found.jpg')) no-repeat center center
    background-size: 100% auto

    @media $tablet
      width: 580px
      height: 329px

  .p-nf-message
    margin: 20px auto 0
    max-width: 400px
    text-align: center
    line-height: 20px

    @media $tablet
      font-size: 18px
      font-weight: 300
      line-height: 25px
