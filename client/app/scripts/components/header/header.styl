.c-header
  z-index: 1000
  fixed: top left
  box-sizing: border-box
  height: $header_height
  width: 100%

  border-bottom: 1px solid #e8e8e8
  background: #fff

  .c-h-main
    text-align: center

  .c-h-brand
    display: inline-block
    padding: 8px 0

    .ui-logo
      width: 35px
      height: @width

  .c-h-menu_icon
    absolute: top right

    display: inline-block
    padding: 13px 10px

    cursor: pointer
    color: #666
    font-size: 20px

  .c-h-navigation
    fixed: top -100% left -100%
    box-sizing: border-box

    padding: 10px

    width: 100%
    height: 100%

    background: alpha(#000, .7)
    border-top: 1px solid #fbfbfb

    display: flex
    flex-direction: column
    align-items: stretch
    justify-content: center

    &:before,
    &:after
      content: ''
      display: block
      flex: 1 0 40px

    nav
      position: relative
      margin: 0 auto
      max-width: 230px

      background: #fff
      border-radius: 3px
      box-shadow: 0px 5px 38px alpha(#000, .75)

      a

        display: block
        padding: 15px 0

        text-align: center
        font-size: 18px
        font-weight: 300
        color: #333

        &:hover
          text-decoration: none

    .c-h-n-close_icon
      cursor: pointer

      absolute: bottom 100% right
      margin-bottom: 5px
      color: #fff
      font-size: 12px

    .c-h-n-close
      cursor: pointer
      display: block
      padding: 15px 0

      text-align: center
      color: #8c8c8c
      border-top: 1px solid #efefef
      background: #fdfdfd
      border-radius: bottom 3px

    &.show
      left: 0
      top: 0

  .c-h-actions
    display: none

  @media $tablet
    .container
      position: relative

    .c-h-menu_icon
      display: none

    .c-h-main
      text-align: left
      float: left

    .c-h-navigation
      relative: top left
      display: block
      margin-left: 40px
      padding: 0

      background: none
      border: none

      opacity: 1

      &.show
        display: block

      &:before,
      &:after
        display: none

      nav
        margin: 0
        max-width: none
        border-radius: 0
        background: none
        box-shadow: none

        a
          padding: 17px 15px
          display: inline-block
          color: #666
          font-size: 14px
          font-weight: 400

      .c-h-n-close_icon,
      .c-h-n-close
        display: none

    .c-h-actions
      absolute: top right
      display: block
      padding: 7px 0

      .ui-btn
        padding-left: 20px
        padding-right: @padding-left
