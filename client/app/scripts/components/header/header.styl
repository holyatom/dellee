.c-header
  fixed: top left
  box-sizing: border-box
  height: $header_height
  width: 100%

  border-bottom: 1px solid #e8e8e8
  background: #fff

  .c-h-main
    text-align: center

  .c-h-brand
    display: inline-block
    padding: 8px 0

    .ui-logo
      width: 35px
      height: @width

  .c-h-menu_icon
    absolute: top right
    z-index: 1000

    display: inline-block
    padding: 16px 10px

    cursor: pointer
    color: #666

  .c-h-navigation
    fixed: top -100% left -100%
    box-sizing: border-box

    padding: 10px

    width: 100%
    height: 100%

    background: linear-gradient(to bottom, #e1ac6e, #e5c197)
    border-top: 1px solid #fbfbfb

    display: flex
    flex-direction: column
    align-items: stretch
    justify-content: center
    min-height: 100%

    opacity: 0
    transition: opacity 200ms ease, left 0ms linear 200ms, top 0ms linear 200ms

    &:before,
    &:after
      display: block
      content: ''
      flex: 1 0 20px

    nav
      a

        display: block
        padding: 15px 0

        text-align: center
        font-size: 20px
        font-weight: 300
        color: #fff

        &:hover
          text-decoration: none

    &.show
      left: 0
      top: 0
      opacity: 1
      transition: opacity 200ms ease

  .c-h-actions
    display: none

  @media $tablet
    .container
      position: relative

    .c-h-menu_icon
      display: none

    .c-h-main
      text-align: left
      float: left

    .c-h-navigation
      relative: top left
      display: block
      margin-left: 40px
      padding: 0

      background: none
      border: none

      &.show
        display: block

      &:before,
      &:after
        display: none

      nav
        a
          padding: 17px 15px
          display: inline-block
          color: #666
          font-size: 14px
          font-weight: 400

    .c-h-actions
      absolute: top right
      display: block
      padding: 7px 0

      .ui-btn
        padding-left: 20px
        padding-right: @padding-left
