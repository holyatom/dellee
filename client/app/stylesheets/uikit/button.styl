.ui-btn
  height: 36px

  font-size: 14px
  text-align: center

  border: 1px solid
  border-radius: 3px
  background: none

  &.ui-btn_block
    width: 100%
    display: block

  &.ui-btn_primary
    color: #fff
    border-color: #e6af71

    background: #e8b47a
    background-image: linear-gradient(#ecbb84, #e8b47a, #e3ad71)
