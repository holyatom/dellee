.ui-input
  padding: 0 10px
  height: 36px

  border: 1px solid #ccc
  border-radius: 3px

  font-size: 14px
  color: #333
  font-weight: normal

  placeholder(color #acacac,)

  &:focus
    border-color: #4078c0

  &.ui-input_large
    padding-left: 15px
    padding-right: @padding-left
    height: 45px
    font-size: 16px

.ui-checkbox
  cursor: pointer

  .ui-input
    width: auto
    height: auto
    margin-right: .3em

.ui-form_group
  margin-bottom: 15px

.ui-form_buttons
  margin-top: 20px

.ui-help_block
  font-size: 12px
  font-weight: normal

  &.ui-help_block_error
    color: #d92929
