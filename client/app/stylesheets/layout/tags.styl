html,
body
  height: 100%

html
  not-selectable()

body
  font-family: $main_font_family

a
  color: $main_link_color
  text-decoration: none

  &:hover
    text-decoration: underline

input
  width: 100%
  box-sizing: border-box

textarea
  width: 100%
  box-sizing: border-box
  resize: vertical

button,
textarea,
input
  &:focus
    outline: none
