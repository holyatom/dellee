html,
body
  height: 100%

html
  not-selectable()

strong
  font-weight: normal
  color: #333

body
  font-family: $main_font_family
  font-weight: 300
  font-size: 15px
  color: #5a5a5a

  &.locked_scroll
    overflow: hidden

a
  font-weight: normal
  color: $main_link_color
  text-decoration: none

  &:hover
    text-decoration: underline

input
  width: 100%
  box-sizing: border-box

  &:-webkit-autofill
    -webkit-box-shadow: 0 0 0px 1000px white inset

textarea
  width: 100%
  box-sizing: border-box
  resize: vertical

button,
textarea,
input
  &:focus
    outline: none

input[type="text"],
input[type="password"],
textarea,
select
  -webkit-appearance: none

h1,
h2,
h3,
h4,
h5,
h6
  color: #333
  font-weight: 300
