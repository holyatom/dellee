.form-buttons
  text-align: right

  .btn
    margin: 0 0 5px 5px

.form-double
  .form-group
    margin: 0

    &:first-child
      margin-bottom: 15px

  @media $tablet
    clearfix()

    .form-group
      &:first-child
        margin-bottom: 0
        width: 49%
        float: left

      &:last-child
        float: right
        width: 50%
