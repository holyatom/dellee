.c-file_uploader

  .c-fu-dropzone
    cursor: pointer
    height: 100px
    border-style: dashed

    .dz-message
      margin-top: 17px
      text-align: center

      span
        display:block

    &.dz-drag-hover,
    &:hover
      border-color: #2c3e50

  .c-fu-preview
    margin-top: 15px

.c-file_preview
  position: relative
  display: inline-block
  overflow: hidden

  margin: 0 10px 10px 0

  width: 98px
  height: @width

  border: 2px solid #2c3e50
  border-radius: 4px

  .c-fp-thumb
    absolute: top left
    right: 0
    bottom: 0

    background: no-repeat center center
    background-size: cover

  .c-fp-remove
    cursor: pointer

    absolute: top 5px right 5px
    width: 16px
    height: @width

    line-height: @height
    text-align: center
    color: #fff

    background: rgba(0, 0, 0, .5)
    border-radius: 3px

  .c-fp-progress
    display: none
    absolute: top 50% left 50%
    transform: translateY(-50%) translateX(-50%)

    .ui-spinner div
      background: #dce4ec

  .c-fp-error
    display: none
    padding: 0 2px
    absolute: top 50% left
    width: 100%

    text-align: center
    transform: translateY(-50%)

    small
      display: block;
      line-height: 14px
      font-size: 12px

  &.dz-error
    .c-fp-error
      display: block

  &.dz-processing
    .c-fp-progress
      display: block
