.c-modal
  z-index: 1031
  fixed: top -100% left -100%

  width: 100%
  height: 100%

  overflow: auto
  background: rgba(255, 255, 255, .8)

  .c-m-wrapper
    display: table

    width: 100%
    height: 100%

  .c-m-container
    display: table-cell
    vertical-align: middle
    padding: 20px

  .c-m-content
    display: block
    margin: 0 auto
    max-width: 600px

  &.active
    left: 0
    top: 0
